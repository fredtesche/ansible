---
- hosts: kube_master, kube_nodes

  tasks:

  - name: Add pubkey
    lineinfile:
      path: /root/.ssh/authorized_keys
      create: yes
      line: '<paste pubkey here>'

  - name: Set timezone
    timezone:
      name: America/Chicago

  - name: Update
    dnf:
      name: '*'
      state: latest

  - name: Install some typical stuff we like to use
    dnf:
      name:
        - tcpdump
        - nano
        - wget
        - nmap
      state: present

  - name: Disable SELinux
    selinux:
      state: disabled

  - name: Comment out fstab entry to disable swap
    replace:
      path: /etc/fstab
      regexp: '(.*swap.*)'
      replace: '#\1'

  - name: Reboot
    reboot:

  - name: Add Docker and Kube repos (Ansible's module doesn't work too well for this)
    command: "{{ item }}"
    with_items:
      - dnf config-manager --add-repo=https://download.docker.com/linux/centos/docker-ce.repo
      - dnf config-manager --add-repo=https://packages.cloud.google.com/yum/repos/kubernetes-el7-x86_64

  - name: Update again (Is this necessary)
    dnf:
      name: '*'
      state: latest

  - name: Install containerd.io
    dnf:
      name: https://download.docker.com/linux/centos/7/x86_64/stable/Packages/containerd.io-1.4.9-3.1.el7.x86_64.rpm
      disable_gpg_check: True
      state: present

  - name: Install Docker
    dnf:
      name: docker-ce
      state: present

  - name: Change Docker network service to use systemd
    lineinfile:
      path: /etc/docker/daemon.json
      create: yes
      line: "{{ item }}"
    with_items:
    - '{'
    - '  "exec-opts": ["native.cgroupdriver=systemd"]'
    - '}'

  - name: Enable docker service
    systemd:
      name: docker
      state: restarted
      enabled: yes
      daemon_reload: yes

  - name: Install Kubernetes
    dnf:
      name: kubeadm
      state: present
      update_cache: yes
      disable_gpg_check: yes

  - name: Enable Kubernetes service
    systemd:
      name: kubelet
      state: restarted
      enabled: yes
      daemon_reload: yes

  - name: Create firewall service object for http-alt
    lineinfile:
      path: /usr/lib/firewalld/services/http-alt.xml
      create: yes
      line: "{{ item }}"
    with_items:
      - '<?xml version="1.0" encoding="utf-8"?>'
      - '<service>'
      - '  <short>http-alt</short>'
      - '  <description>HTTP alternate ports</description>'
      - '  <port protocol="tcp" port="8080"/>'
      - '  <port protocol="udp" port="8080"/>'
      - '</service>'

  - name: Create firewall service object for Kubernetes Master
    lineinfile:
      path: /usr/lib/firewalld/services/kube-master.xml
      create: yes
      line: "{{ item }}"
    with_items:
      - '<?xml version="1.0" encoding="utf-8"?>'
      - '<service>'
      - '  <short>kube-master</short>'
      - '  <description>Services for Kubernetes Master</description>'
      - '  <port protocol="tcp" port="6443"/>'
      - '  <port protocol="tcp" port="2379-2380"/>'
      - '  <port protocol="tcp" port="10250"/>'
      - '  <port protocol="tcp" port="10251"/>'
      - '  <port protocol="tcp" port="10252"/>'
      - '  <port protocol="tcp" port="10255"/>'
      - '</service>'

  - name: Create firewall service object for Kubernetes Node
    lineinfile:
      path: /usr/lib/firewalld/services/kube-node.xml
      create: yes
      line: "{{ item }}"
    with_items:
      - '<?xml version="1.0" encoding="utf-8"?>'
      - '<service>'
      - '  <short>kube-master</short>'
      - '  <description>Services for Kubernetes Node</description>'
      - '  <port protocol="tcp" port="6783"/>'
      - '  <port protocol="tcp" port="10250"/>'
      - '  <port protocol="tcp" port="10255"/>'
      - '  <port protocol="tcp" port="30000-32767"/>'
      - '</service>'

- hosts: kube_master

  tasks:

  - name: Add firewall configs for Master
    firewalld:
      service: "{{ item }}"
      permanent: yes
      state: enabled
    with_items:
      - http
      - https
      - http-alt
      - kube-master

  - name: reload service firewalld
    systemd:
      name: firewalld
      state: reloaded

- hosts: kube_nodes

  tasks:

  - name: Add firewall configs for Nodes
    firewalld:
      service: "{{ item }}"
      permanent: yes
      state: enabled
    with_items:
      - http
      - https
      - http-alt
      - kube-node

  - name: reload service firewalld
    systemd:
      name: firewalld
      state: reloaded

# Next:
# Configure network stuff
# Join nodes to master
# Create app
# Create ingress
